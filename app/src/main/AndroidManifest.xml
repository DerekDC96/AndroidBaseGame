<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.thebasegame">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TheBaseGame">
        <activity
            android:name=".UI.ViewRecordActivity"
            android:exported="false" />
        <activity
            android:name=".UI.ScoreScreenActivity"
            android:exported="false" />
        <activity
            android:name=".UI.GameActivity"
            android:exported="false" />
        <activity
            android:name=".UI.CustomizeGameActivity"
            android:exported="false" />
        <activity
            android:name=".UI.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>